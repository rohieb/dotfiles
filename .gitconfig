[user]
	name = Roland Hieber
	email = rohieb@rohieb.name
  signingkey = rohieb@rohieb.name

[color]
	ui = auto

[alias]
	st = status
	co = checkout
	br = branch
  ci = commit
  ol = log --oneline
  di = diff
  dif = diff
  stpop = stash pop
  stsa = stash save
	graph = log --graph --pretty=oneline --abbrev-commit --all --decorate
	cached = diff --cached
	amend = commit --amend
	chp = cherry-pick
	rc = rebase --continue
	pr = pull --rebase
	add = assume-unchanged
	assume-unchanged = update-index --assume-unchanged
	lastlog = log --oneline HEAD@{1}..HEAD --format='%C(auto)%h %Cgreen%an: %Creset%s'

[core]
	excludesfile = /home/rohieb/.gitignore

[cola]
	fontdiff = Monospace,8,-1,5,50,0,0,0,0,0
	tabwidth = 4
[gui]
	editor = vi
	historybrowser = gitk
[diff]
	tool = meld
[merge]
	tool = meld
[push]
	default = current
[achievement]
	upload = false
