[user]
	name = Roland Hieber
	email = rohieb@rohieb.name
	signingkey = rohieb@rohieb.name

[color]
	ui = auto

[alias]
	st = status
	co = checkout
	br = branch
	chp = cherry-pick
	pr = pull --rebase

	ci = commit
	amend = commit --amend
  
	d = diff
	di = diff
	dif = diff
	ca = diff --cached
	cached = diff --cached
	stat = show --stat
	fulldiff = diff -p --no-prefix -U20000

	a = add -p

	stp = stash pop
	sts = stash save

	ol = log --oneline
	lastlog = log --graph HEAD@{1}..HEAD --format='%C(auto)%h %Cgreen(%an) %Creset%s'
	fetchlog = log --graph HEAD..FETCH_HEAD --format='%C(auto)%h %Cgreen(%an) %Creset%s'
	graph = log --graph --pretty='%C(auto)%h%d %Cgreen(%an)%Creset %s' --abbrev-commit
	gr    = log --graph --pretty='%C(auto)%h%d %Cgreen(%an)%Creset %s' --abbrev-commit

	assume-unchanged = update-index --assume-unchanged

	rbi = rebase -i
	rbc = rebase --continue
	f = fetch

[core]
	excludesfile = /home/rohieb/.gitignore

[cola]
	fontdiff = Monospace,8,-1,5,50,0,0,0,0,0
	tabwidth = 4

[gui]
	editor = vi
	historybrowser = gitk

[diff]
	tool = meld

[merge]
	tool = meld
	defaultToUpstream = true

[push]
	default = current

[achievement]
	upload = false

[bash]
	showDirtyState = true

[remote-hg]
	hg-git-compat = true

[http "https://hannover.ccc.de"]
	sslCAInfo = /home/rohieb/.git/sslcerts/cacert.pem
