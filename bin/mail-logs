#!/bin/bash -e
# source me for better job control

for acct in $(awk -F'[] ]' '/^\[Account/ { print $2; }' ~/.offlineimaprc); do
	# eval - we want the full cmdline in the job name
	eval "journalctl -b -f --user-unit offlineimap-quick@$acct.service | offlineimap_log_highlight &"
done

journalctl -b -f --user-unit 'offlineimap.*' | offlineimap_log_highlight &

if [ -r ~/log/msmtp.log ]; then
	tail -f ~/log/msmtp.log &
fi
