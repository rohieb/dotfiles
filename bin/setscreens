#!/bin/sh
DEFAULT="--scale 1x1 --panning 0x0 --pos 0x0"
HDMI=""
LVDS=""
VGA=""
SCREEN=""

case $1 in
  reset)
    SCREEN="--fb 1366x768"
    LVDS="--auto --primary --mode 1366x768 $DEFAULT"
    VGA="--off"
    HDMI="--off"
    ;;
  home-dual)
    VGA="--primary --auto --mode 1280x1024 --pos 0x0"
    LVDS="--auto --left-of VGA1"
    HDMI="--off"
    ;;
  home)
    VGA="--primary --mode 1280x1024 --auto --right-of LVDS1"
    LVDS="--off"
    HDMI="--off"
    ;;
  siemens-dual)
    VGA="--primary --auto --mode 1280x1024 --pos 0x0"
    LVDS="--auto --right-of VGA1"
    HDMI="--off"
    ;;
  stratum-beamer)
    VGA="--auto --mode 640x480 --right-of LVDS1 $DEFAULT"
    ;;
  stratum-beamer-mirror)
    LVDS="--mode 640x480 $DEFAULT"
    VGA="--mode 640x480 --same-as LVDS1 $DEFAULT"
    HDMI="--off"
    ;;
  *)
    echo Usage: $0 '{reset|home|home-dual|stratum-beamer}';;
esac

LVDS_SETTING=""
if [ -n "$LVDS" ]; then
  LVDS_SETTING="--output LVDS1 $LVDS"
fi;
VGA_SETTING=""
if [ -n "$VGA" ]; then
  VGA_SETTING="--output VGA1 $VGA"
fi;
HDMI_SETTING=""
if [ -n "$HDMI" ]; then
  HDMI_SETTING="--output HDMI1 $HDMI"
fi;

xrandr $SCREEN $LVDS_SETTING $VGA_SETTING $HDMI_SETTING

xmodmap $HOME/.xmodmaprc

xset dpms force on

# vim: set ts=2 sw=2 expandtab smartindent autoindent:
