#!/bin/sh
LC_ALL=C.UTF-8

mkdir -vp $HOME/log

if [ -z "`ping -w 10 -q -c1 8.8.8.8 | grep '1 received'`" ]; then
	# No internet access
	exit
fi

if [ -x "`which task`" \
     -a -r $HOME/.taskrc \
     -a -z "$(ps -Af | grep -v grep | grep '^rohieb' | grep ' task ')" \
   ]; then
	(
		echo
		date
		task sync 2>&1
	) >> ~/log/task-sync.log
fi
