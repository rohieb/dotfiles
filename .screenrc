# always print list of screen windows in last line
hardstatus alwayslastline "%-Lw%{= BW}%50>%n%f* %t%{-}%+Lw%<"
# behave like the underlying terminal emulator
term screen-256color
# always pass the bell onto the underlying terminal emulator
vbell off
# increase scrollback for long bitbake/gcc/ptxdist outputs
defscrollback 5000
